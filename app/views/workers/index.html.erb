<div class="testing" >
	<div class="wrapper ">
    <%= render 'partials/sidebar', report: false, worker: true, bank: false, rate: false %>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper"></div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <p id="notice"><%= notice %></p>
          <!-- your content here -->
          <div class="navDashContent">
            <div class="titleDashContent">
              <h2>Trabajadores <br>
              <div class="line"></div></h2>
            </div>
       			<td><%= link_to 'CREAR', new_worker_path, class:'waves-effect waves-light btn btn-theme' %></td>
          </div>
          <div class="Dashcontent">
            <div class="table-responsive">             
              <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Nombre Completo</th>
                  <th>Email</th>
                  <th>Teléfono</th>
                  <th>Tipo</th>
                  <th></th>
                  <th></th>
                  <% if current_user.type_person == 'admin' %>
                    <th></th>
                  <%end%>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <% if user.type_person == 'admin' %>
                      <td>Administrador</td>
                    <% elsif user.type_person == 'worker'%>
                      <td>Trabajador</td>
                    <%end%>
                    <td>     
                      <%= link_to 'MOSTRAR', worker_path(user), class:'waves-effect waves-light btn btn-theme' %>
                    </td> 
                    <td>        
                      <%= link_to 'MODIFICAR', edit_worker_path(user), class:'waves-effect waves-light btn btn-theme' %>
                    </td>
                    <td><%= link_to 'ELIMINAR', worker_path(user), method: :delete, data: { confirm: '¿Seguro que desea eliminar el trabajador?' }, class:'waves-effect waves-light btn btn-theme' %></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
