<div class="testing"> 
	<div class="wrapper ">
    <%= render 'partials/sidebar', report: false, worker: false, bank: false, rate: true %>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <!-- your content here -->
          <p id="notice"><%= notice %></p>
          <div class="navDashContent">
            <div class="titleDashContent">
              <h2>
                Tasa<br>
                <div class="line"></div>
              </h2>
            </div>
            <% if current_user.type_person == 'admin' %>
       			  <td><%= link_to 'CREAR', new_rate_path, class:'waves-effect waves-light btn btn-theme' %></td>
            <%end%>
          </div>
          <div class="Dashcontent">
            <div class="table-responsive">             
              <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>País</th>
                  <th>Tasa</th>
                  <th>Fecha</th>
                  <th></th>
                  <% if current_user.type_person == 'admin' %>
                    <th></th>
                    <th></th>
                  <%end%>
                </tr>
              </thead>
              <tbody>
                <% @rates.each do |rate| %>
                  <tr>
                    <td><%= rate.country %></td>
                    <td><%= rate.value %></td>
                    <td><%= rate.updated_at.strftime("%d-%m-%Y %T") %></td>
                    <td><%= link_to 'MOSTRAR', rate, class:'waves-effect waves-light btn btn-theme' %></td>
                    <% if current_user.type_person == 'admin' %>
                      <td><%= link_to 'MODIFICAR', edit_rate_path(rate), class:'waves-effect waves-light btn btn-theme' %></td>
                      <td><%= link_to 'ELIMINAR',rate, method: :delete, data: { confirm: '¿Seguro que desea eliminar el país?' }, class:'waves-effect waves-light btn btn-theme' %></td>
                    <%end%>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 

