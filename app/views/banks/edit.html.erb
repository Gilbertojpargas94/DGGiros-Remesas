<div class="testing">
  <div class="wrapper ">
    <%= render 'partials/sidebar', report: false, worker: false, bank: true, rate: false %>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <!-- your content here -->
          <div class="navDashContent">
            <div class="titleDashContent">
              <h2>Bancos <br>
              <div class="line"></div></h2>
            </div>
          </div>
          <div class="Dashcontent">
            <%= form_with(model: @bank, local: true) do |form| %>
              <% if @bank.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@bank.errors.count, "error") %> Se ha prohibido la creaci√≥n del banco debiado a:</h2>
                  <ul>
                    <% @bank.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="input-field col s12 l6">
                    <p style="font-weight:bold">Nombre del Banco <span style="color: red">*</span>  </p>
                    <%= form.select :name, @banks_.collect{|u| [u, u]},{:include_blank => "Seleccione un banco"}, id: 'banks',class: 'validate', required: true%>
                </div>
                <div class="input-field col s12 l6">
                  <p style="font-weight:bold">Nombre del Titular <span style="color: red">*</span>  </p>
                  <%= form.text_field :headline, id: 'first_name', class: 'validate', required: true %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12 l6">
                <p style="font-weight:bold"> Estatus  <span style="color: red">*</span>  </p>
                  <%= form.select(:status, options_for_select([['Activo', 1], ['Inactivo', 0]], @bank.status ? 1 : 0 )) %>
                </div>
                <div class="input-field col s12 l6">
                </div>
              </div>        
              <div class="input-field col s12">
                <%= link_to 'VOLVER', banks_path, class:"waves-effect waves-light btn btn-theme" %>
                <%= form.submit 'GUARDAR', class:"waves-effect waves-light btn btn-theme" %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
