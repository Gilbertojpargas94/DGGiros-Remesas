<div class="testing">
  <div class="wrapper ">
    <%= render 'partials/sidebar', report: false, worker: false, bank: true, rate: false %>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <p id="notice"><%= notice %></p>
          <!-- your content here -->
          <div class="navDashContent">
            <div class="titleDashContent">
              <h2>Bancos <br>
                <div class="line"></div>
              </h2>
            </div>
            <% if current_user.type_person == 'admin' %>
       			  <td><%= link_to 'CREAR', new_bank_path, class:'waves-effect waves-light btn btn-theme' %></td>
            <%end%>
          </div>
          <div class="Dashcontent">
            <div class="table-responsive">             
              <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Nombre del Banco</th>
                  <th>Titular de la cuenta</th>
                  <th>Estatus</th>
                  <th></th>
                  <% if current_user.type_person == 'admin' %>
                    <th></th>
                    <th></th>
                  <%end%>
                </tr>
              </thead>
              <tbody>
                <% @banks.each do |bank| %>
                  <tr>
                    <td><%= bank.name %></td>
                    <td><%= bank.headline %></td>
                    <td class="<%= bank.status ? 'status-green' : 'red-text' %>" style="font-weight: bold;"><%= bank.status ? 'Activo' : 'Inactivo' %></td>
                    <td><%= link_to 'MOSTRAR', bank, class:'waves-effect waves-light btn btn-theme' %></td>
                    <% if current_user.type_person == 'admin' %>
                      <td><%= link_to 'MODIFICAR', edit_bank_path(bank) , class:'waves-effect waves-light btn btn-theme' %></td>
                      <td><%= link_to 'ELIMINAR', bank, method: :delete, data: { confirm: '
                        ¿Está seguro que desea elimnar el banco?' }, class:'waves-effect waves-light btn btn-theme' %></td>
                    <%end%>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
