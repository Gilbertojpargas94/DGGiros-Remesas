<div class="testing">
  <div class="wrapper ">
    <%= render 'partials/sidebar', report: false, worker: true, bank: false, rate: false %>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper"></div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <!-- your content here -->
          <div class="titleDashContent">
            <h2>Trabajadores <br>
            <div class="line"></div></h2>
          </div>
          <div class="Dashcontent">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <div class="row">
                <div class="input-field col s12 l6">
                  <p>Nombre</p>
                  <%= f.text_field :name, autofocus: true, autocomplete: "nombre", class: 'validate', id:'first_name' %>
                </div>
                <div class="input-field col s12 l6">
                  <p>Correo</p>
                  <%= f.email_field :email, autocomplete: "email", class: 'validate', id:'first_name' %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12 l6">
                  <p>Contraseña (Deja este campo en blanco si no desea cambiar la contraseña)</p>
                  <%= f.password_field :password, autocomplete: "off", class: 'validate', id:'first_name' %>
                </div>
                <div class="input-field col s12 l6">
                  <p>Confirmar Contraseña</p>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'validate', id:'first_name' %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <p>Tipo de trabajador</p>
                  <%= f.select :type_person, options_for_select([['Administrador', 'admin'], ['Trabajador', 'worker'], ['Persona Normal', 'normal']]) %>
                </div>
                <div class="input-field col s12 l6">
                  <p>Telefono</p>
                  <%= f.telephone_field :phone, autocomplete: "teléfono", class: 'validate', id:'first_name' %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <p>Introduzca su contraseña actual para confirmar sus cambias</p>
                  <%= f.password_field :current_password, autocomplete: "off", class: 'validate', id:'first_name' %>
                </div>
                <div class="input-field col s12 l6">
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <%= link_to 'VOLVER', workers_path, class:'waves-effect waves-light btn btn-theme' %>
                  <%= f.submit 'ACTUALIZAR', class:'waves-effect waves-light btn btn-theme' %>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

